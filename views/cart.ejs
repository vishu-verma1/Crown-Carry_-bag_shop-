<%- include('./partials/header') %>

    <div class="w-full min-h-screen px-10 py-10 flex flex-col gap-8 items-start">
        <% user.cart.forEach(function(product) { %>
            <div class="w-full flex flex-col md:flex-row items-start gap-5 bg-white shadow-md rounded-md p-5">
                <!-- Product Image Section -->
                <div class="w-full md:w-[30%] rounded-md overflow-hidden">
                    <div class="w-full h-80 flex justify-center items-center bg-[<%= product.bgcolor %>]">
                        <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                            alt="<%= product.name %>">
                    </div>
                    <div class="w-full flex justify-between px-5 py-4 bg-[<%= product.panelcolor %>]">
                        <h3 class="text-xl font-semibold">
                            <%= product.name %>
                        </h3>
                        <div class="flex items-center gap-2">
                            <button class="w-7 h-7 bg-white flex rounded-full items-center justify-center border"><i
                                    class="ri-add-line"></i></button>
                            <div class="px-3 py-1 rounded-md bg-white border text-black">1</div>
                            <button class="w-7 h-7 bg-white flex rounded-full items-center justify-center border"><i
                                    class="ri-subtract-line"></i></button>
                        </div>
                    </div>
                    <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= product.textcolor %>]">
                        <h4 class="text-lg">Net Total</h4>
                        <h2 class="text-lg font-semibold">
                            ₹ <%= product.price %>
                        </h2>
                    </div>
                </div>

                <!-- Price Breakdown Section -->
                <div class="w-full md:w-[70%] flex flex-col gap-5">
                    <h3 class="text-lg font-semibold">Price Breakdown</h3>
                    <div class="px-5">
                        <div class="flex justify-between">
                            <h4>Total MRP</h4>
                            <h4>₹ <%= product.price %>
                            </h4>
                        </div>
                        <div class="flex justify-between">
                            <h4>Discount on MRP</h4>
                            <h4>₹ <%= product.discount %>
                            </h4>
                        </div>
                        <div class="flex justify-between">
                            <h4>Platform Fee</h4>
                            <h4>₹ <%= platformfee %>
                            </h4>
                        </div>
                        <div class="flex justify-between">
                            <h4>Shipping Fee</h4>
                            <h4>FREE</h4>
                        </div>
                    </div>
                    <div class="w-full h-[1px] bg-gray-300 mt-5"></div>
                    <div class="flex justify-between items-center">
                        <h3 class="text-lg font-semibold">Total Amount</h3>
                        <h3 class="text-lg font-semibold text-green-600">
                            ₹ <%= Number(product.price) + platformfee - Number(product.discount) %>
                        </h3>
                    </div>
                    <form action="" class="flex justify-end">
                        <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-md">Checkout</button>
                    </form>
                </div>
            </div>
            <% }) %>
    </div>

    <%- include('./partials/footer') %>